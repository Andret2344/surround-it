{
	"manifest_version": 3,
	"name": "Surround it!",
	"short_name": "Surround it",
	"version": "0.4.1",
	"description": "__MSG_description__",
	"author": "andret2344@gmail.com",
	"default_locale": "en",
	"action": {
		"default_popup": "popup.html"
	},
	"options_page": "options.html",
	"permissions": [
		"storage"
	],
	"host_permissions": [
		"*://*/*"
	],
	"content_scripts": [
		{
			"matches": [
				"*://*/*"
			],
			"js": [
				"background.js"
			]
		}
	],
	"icons": {
		"16": "icons/img16.png",
		"32": "icons/img32.png",
		"48": "icons/img48.png",
		"128": "icons/img128.png"
	},
	"browser_specific_settings": {
		"gecko": {
			"id": "andret2344@gmail.com",
			"strict_min_version": "98.0"
		}
	}
}
