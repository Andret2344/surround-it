{
	"manifest_version": 3,
	"name": "Surround it",
	"short_name": "Surround it",
	"version": "0.2.0",
	"description": "Simply wrap text in any brackets or parentheses.",
	"action": {
		"default_icon": {
			"16": "icon/img16.png",
			"32": "icon/img32.png",
			"48": "icon/img48.png",
			"128": "icon/img128.png"
		}
	},
	"content_scripts": [
		{
			"matches": [
				"<all_urls>"
			],
			"js": [
				"libs/jquery.min.js",
				"background.js"
			]
		}
	],
	"icons": {
		"16": "icon/img16.png",
		"32": "icon/img32.png",
		"48": "icon/img48.png",
		"128": "icon/img128.png"
	},
	"permissions": [
		"activeTab",
		"input"
	],
	"input_components": [
		{
			"name": "Test IME",
			"type": "ime",
			"id": "test",
			"description": "Test IME",
			"language": "en-US",
			"layouts": [
				"us::eng"
			]
		}
	]
}
